/* pages/subscribe/index/index.wxss */
.information-news {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.information-txt {
  font-size: 40rpx;
  color: #000;
  padding: 32rpx 0 48rpx 0;
  font-weight: 700;
  margin-right: 32rpx;
}
.search-input {
  width: 40rpx;
  height: 40rpx;
  padding: 32rpx 0 48rpx 0;
}
.search-img {
  width: 40rpx;
  height: 40rpx;
}
/* .information-article {
  border: 1px solid #ccc;
} */

.information-icon {
  margin-right: 12rpx;
}
.information-icon image {
  width: 46rpx;
  height: 46rpx;
}
.information-icon image:nth-child(1) {
  margin-right: 42rpx;
}
.information-time {
  float: right;
}
.information-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.information-img {
  width: 100%;
  height: 348rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.information-img image{
  width: 100%;
}

.information-article-each {
  border: 1px solid #ccc;
 box-shadow:0 0 8px 0px #ccc;
  margin-bottom: 36rpx;
  padding-bottom: 24rpx;
}
.information-title {
  font-size: 36rpx;
  color: #000;
  margin-top: 20rpx;
  position: relative;
}
.information-time {
  font-size: 20rpx;
  color: #8a8a8a;
  margin-left: 24rpx;
}
.information-headline {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.information-headline text {
  display: inline-block;
}
.information-name {
  text-align: center;
  padding: 4rpx;
  border: 1px solid #000;
  font-size: 24rpx;
}
.myinformation-block {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.load-content{
  text-align: center;
}
.loading-svg{
  width:100rpx;
  height:100rpx;
}