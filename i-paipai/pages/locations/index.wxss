.title {
  font-size: 28rpx;
  padding: 30rpx 20rpx;
  display: inline-block;
  color: #999;
}

.location-list {
   display:flex;
   justify-content:flex-start;
   align-items:center;
   flex-wrap:wrap;
   width:100%;
   padding-bottom:80rpx;
}
.img-container{
    float:left;
    width:33%;
    display:flex;
    justify-content:center;
    flex-direction:column;
    margin-bottom:3rpx;
    position:relative;
    padding:0 0 0 3rpx;
}
.image{
  width:100%;
  height: 200rpx;
  vertical-align:middle;
}
.text-center{
   color:#fff;
   font-size:40rpx;
   font-weight:bold;
   margin-left:18rpx;
   margin-top:5rpx;
   position:absolute;
   left:0;
   bottom:0;
}
