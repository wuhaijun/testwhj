.popup-body {
  background-color:#000;
  color:white;
  width:360rpx;
  font-size:33rpx;
  font-weight:100;
  height:108rpx;
  position:absolute;
  padding:18rpx 12rpx;
  box-sizing:border-box;
  /* text-align:center; */
  overflow:hidden;
  z-index:98;
}

.popup-arrow {
  width:14rpx;
  height:14rpx;
  margin:0 auto;
  background-color:#000;
  display:block;
  position:absolute;
  transform:rotate(45deg);
  -ms-transform:rotate(45deg); 	/* IE 9 */
  -moz-transform:rotate(45deg); 	/* Firefox */
  -webkit-transform:rotate(45deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(45deg); 
}

.popup-button {
  margin:0 36rpx;
  display:inline-block;
}

.popup-button-img {
  width: 36rpx;
  height: 36rpx;
}

.popup-button-text {
  font-size:20rpx;
  display:block;
  margin-top:4rpx;
  z-index: 99;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.note-content textarea {
  background-color:#eaeaea;
  width:100%;
  padding:24rpx;
  box-sizing:border-box;
  font-size: 30rpx;
}

.note-panel {
  width:100%;
  overflow:hidden;
  position:fixed;
  top:10%;
  left:0;
  z-index:9999;
}

.note-content {
  background-color:#f9f9f9;
  margin:0 35rpx;
  padding:30rpx;
  font-size: 30rpx;
}

.note-btn {
  padding:10rpx;
  font-size:34rpx;
  font-weight:100;
  width:150rpx;
  display:inline-block;
  text-align:center;
  margin-top:35rpx;
  margin-left:35rpx;
  float:right;
}

.note-btn.save {
  border:1px solid #ffda72;
  background-color: #ffda72;
}

.note-btn.cancel {
    border:1px solid;
}

.share-card {
  width:100%;
  overflow:hidden;
  position:fixed;
  top:10%;
  left:0;
  z-index:9999;

}

.card-body {
  background-color:#f9f9f9;
  margin:0 35rpx;
  padding:30rpx;
}