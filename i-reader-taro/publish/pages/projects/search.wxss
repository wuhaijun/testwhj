.search {
  margin: 60rpx 0rpx 0 0rpx;
}
.search-input {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
      -ms-flex-align: end;
          align-items: flex-end;
  margin: 0 60rpx 24rpx 60rpx;
}
.search-history-box {
  padding-top: 24rpx;
  margin: 0 60rpx;
}
.search-input image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-input input {
  font-size: 30rpx;
  border-bottom: 1rpx solid #8a8a8a;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.search-img {
  width: 40rpx;
  height: 40rpx;
}
.search-history {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.search-history text {
  display: inline-block;
}
.search-history text:nth-child(1) {
  font-size: 30rpx;
  color: #000;
}
.search-history text:nth-child(2) {
  width: 80rpx;
  height: 42rpx;
  border: 1rpx solid #000;
  font-size: 24rpx;
  color: #000;
  text-align: center;
  line-height: 42rpx;
}
.record {
  margin-top: 36rpx;
}
.record .history-list:nth-child(1) {
  margin-left: 0;
}
.history-list {
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #8a8a8a;
  padding: 0 12rpx;
  background-color: #eaeaea;
  margin-bottom: 24rpx;
  margin-left: 48rpx;
}
.load-content {
  text-align: center;
}
.loading-svg {
  width: 100rpx;
  height: 100rpx;
}
.search-empty {
  width: 300rpx;
  height: 300rpx;
  margin: auto;
  margin-top: 180rpx;
  margin-bottom: 48rpx;
}
.search-empty-text {
  display: block;
  text-align: center;
  font-size: 30rpx;
  color: #000;
}
.search-empty-view {
  text-align: center;
}
